{
	"name": "docs",
	"tags": ["tooling"],
	"implicitDependencies": ["tag:component", "ui-icons"],
	"namedInputs": {
		"core": [
			"{projectRoot}/data",
			"{projectRoot}/content",
			"{projectRoot}/resources"
		],
		"scripts": ["{projectRoot}/.eleventy.js"],
		"tools": [
			"{projectRoot}/_includes",
			"{projectRoot}/utils",
			"{projectRoot}/.eleventy.js"
		]
	},
	"targets": {
		"clean": {},
		"build": {
			"dependsOn": ["^build", "clean"],
			"inputs": ["core", "scripts", "tools"],
			"executor": "nx:run-commands",
			"options": {
				"cwd": "{projectRoot}",
				"commands": ["gulp buildDocs"]
			}
		},
		"start": {
			"depends": ["^build", "clean"],
			"inputs": ["core", "scripts", "tools"],
			"executor": "nx:run-commands",
			"options": {
				"cwd": "{projectRoot}",
				"commands": ["NODE_ENV=development BROWSERSYNC_OPEN=true gulp dev"]
			}
		}
	}
}
